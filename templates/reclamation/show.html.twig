{% extends "back.html.twig" %}

{% block title %}Reclamation{% endblock %}

{% block body %}
    <h1>Reclamations</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reclamation.id }}</td>
            </tr>
            <tr>
                <th>Id_user</th>
                <td>{{ reclamation.idUser }}</td>
            </tr>
            <tr>
                <th>Etat_rec</th>
                <td>{{ reclamation.etatRec ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Date_rec</th>
                <td>{{ reclamation.dateRec ? reclamation.dateRec|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Desc_rec</th>
                <td>{{ reclamation.descRec }}</td>
            </tr>
            <tr>
                <th>Type_rec</th>
                <td>{{ reclamation.typeRec }}</td>
            </tr>
        </tbody>
    </table>

    <a class:'btn btn-secondary' href="{{ path('app_reclamation_index') }}">back to list</a>

    <a class:'btn btn-secondary' href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}">edit</a>

    {{ include('reclamation/_delete_form.html.twig') }}
{% endblock %}
