{{ form_start(form,{'attr':{'novalidate': 'novalidate','class':'my-5'}} )}}
<div class="d-flex flex-column w-50 mx-auto gap-3">
  <div class="d-flex gap-3">
    <div class="d-flex flex-column w-50">
      {{ form_widget(form.name,{'attr':{'class':'form-control px-3 py-2'}}) }}

      {{ form_errors(form.name) }}
    </div>
    <div class="d-flex flex-column w-50">
      {{ form_widget(form.lastname,{'attr':{'class':'form-control px-3 py-2'}})
      }} {{ form_errors(form.lastname) }}
    </div>
  </div>
  <div class="d-flex gap-3">
    <div class="d-flex flex-column w-50">
      {{ form_widget(form.email,{'attr':{'class':'form-control px-3 py-2'}}) }}
      {{ form_errors(form.email) }}
    </div>
    <div class="d-flex flex-column w-50">
      {{ form_widget(form.plainPassword,{'attr':{'class':'form-control px-3 py-2'
      }}) }}
      {{ form_errors(form.plainPassword) }}
    </div>
  </div>
  <div class="d-flex gap-3">
    <div class="d-flex flex-column">
      {{ form_widget(form.gender) }}
      {{ form_errors(form.gender) }}
    </div>

    {{ form_widget(form.date_birth,{'attr':{'class':'d-flex gap-1 justify-content-center'
    }}) }}
  </div>
  {{ form_widget(form.SignUp,{'attr':{'class':'btn btn-primary w-25 mx-auto'}})
  }}
</div>
{{ form_end(form) }}

{% endblock %}
