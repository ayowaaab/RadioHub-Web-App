      </div>
      <div class="d-flex flex-column w-100">
        {{ form_widget(form.date_rep, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.date_rep,{'attr':{'class':'text-danger'}}) }}
      </div>
    </div>



      <button type="submit" class="btn btn-primary">Send</button>
      {{ form_end(form) }}
    </div>
  </div>
</div>

