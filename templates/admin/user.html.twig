{% extends 'back.html.twig' %} {% block body%}

<div class="container-fluid">
  <div class="card">
    <div class="card-body">
      <h2 class="text-center">Users Table</h2>
      <table class="table">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Email</th>
          <th scope="col">Actions</th>
        </tr>
        {% for user in users %}
        <tr>
          <td>{{ user.id }}</td>
          <td>{{ user.name }}</td>
          <td>{{ user.lastname }}</td>
          <td>{{ user.email }}</td>
          <td class="d-flex gap-2">
            <a
              href="{{ path('app_update_user', { id: user.id }) }}"
              class="btn btn-success"
              >Update</a
            >
            <a
              href="{{ path('app_delete_user', { id: user.id }) }}"
              class="btn btn-danger"
              >Delete</a
            >
          </td>
        </tr>
        {% endfor %}
      </table>
    </div>
  </div>
</div>
{% endblock %}
