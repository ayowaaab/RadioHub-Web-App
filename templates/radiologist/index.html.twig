<!DOCTYPE html>

<title>Radiologist index</title>

{% block body %}
    <h1>Radiologist index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for radiologist in radiologists %}
            <tr>
                <td>{{ radiologist.id }}</td>
                <td>{{ radiologist.username }}</td>
                <td>{{ radiologist.password }}</td>
                <td>
                    <a href="{{ path('app_radiologist_show', {'id': radiologist.id}) }}">show</a>
                    <a href="{{ path('app_radiologist_edit', {'id': radiologist.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_radiologist_new') }}">Create new</a>
{% endblock %}
