{% block body %}
<div style="margin-left:300px ;margin-right: 300px">
    <table class="table" style="border-collapse: collapse; border: 1px solid #ddd;">
        <tbody>
            <tr>
                <th style="border: 1px solid #ddd; padding: 8px;">Id</th>
                <td style="border: 1px solid #ddd; padding: 8px;">{{ article.id }}</td>
            </tr>
            <tr>
                <th style="border: 1px solid #ddd; padding: 8px;">Title</th>
                <td style="border: 1px solid #ddd; padding: 8px;">{{ article.title }}</td>
            </tr>
            <tr>
                <th style="border: 1px solid #ddd; padding: 8px;">Content</th>
                <td style="border: 1px solid #ddd; padding: 8px;">{{ article.content }}</td>
            </tr>
            <tr>
                <th style="border: 1px solid #ddd; padding: 8px;">Image</th>
                <td style="border: 1px solid #ddd; padding: 8px;">
                   
                    <img src="{{ asset('articles/' ~ article.image) }}" class="card-img-top" id="image" alt="...">
