                <th style="border: 1px solid #ddd; padding: 8px;">Comment Count</th>
                <td style="border: 1px solid #ddd; padding: 8px;">{{ commentCount }}</td>
                <!-- Affichez le nombre de commentaires -->
            </tr>
        </tbody>
    </table>

