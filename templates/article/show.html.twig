            </tr>
            <tr>
                <th style="border: 1px solid #ddd; padding: 8px;">CreatedAt</th>
                <td style="border: 1px solid #ddd; padding: 8px;">{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
