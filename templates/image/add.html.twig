{%block content%}
<style>
  .form-error-message {
    color: red;
    font-size: 14px;
    margin-top: 5px;
  }
</style>

<main id="main" class="main">

  <div class="pagetitle">
    <h5>Upload Image</h5>

    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_image') }}">Image</a></li>
        <li class="breadcrumb-item">Upload</li>

      </ol>
    </nav>
  </div><!-- End Page Title -->


  <section class="section">
    <div class="row">

      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Upload Image</h5>

          {{ form_start(f, {'attr': {'novalidate': 'novalidate'}, 'enctype': 'multipart/form-data'}) }}

          <div class="mb-3">
            {{ form_label(f.bodypart) }}
            {{ form_widget(f.bodypart, {'attr': {'class': 'form-control'}}) }}
            <div class="form-error-message">{{ form_errors(f.bodypart) }}</div>
          </div>



          <div class="mb-3">
          
            {{ form_label(f.patient) }}
            {{ form_widget(f.patient, {'attr': {'class': 'form-control'}}) }}
            <div class="form-error-message">{{ form_errors(f.patient) }}</div>
          </div>

          <div class="mb-3">
            {{ form_label(f.aquisationDate, 'Acquisition Date')}}
            {{ form_widget(f.aquisationDate,{'attr': {'class': 'form-control '}}) }}
            <div class="form-text form-error-message text-danger">{{ form_errors(f.aquisationDate) }}</div>
          </div>

          <div class="mb-3">
            <label for="filename">FileName</label>
            {{ form_widget(f.filename,{'attr': {'class': 'form-control'}}) }}
            <div class="form-error-message">{{ form_errors(f.filename,{'attr': {'class': 'form-danger '}} )}}</div>
          </div>

          <center>{{ form_widget(f.save) }}</center>


          <div class="text-center">
          </div>

          {{ form_end(f) }}





























        </div>

      </div>
    </div>
  </section>

</main>
