{% extends 'base.html.twig' %}

{% block title %} MED {% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div style="display: flex; justify-content: center; align-items: center; height: 100vh;">
        <div style="width: 50%; text-align: center;">
        {% for doctor in medname %}
                <h2 style="margin-bottom: 20px;">Liste D'attente Des Rendus Du Docteur: {{ doctor.username }}</h2>
            {% endfor %}
        {% for compteRendu in compteRendus %}
                <div style="border: 1px solid #ccc; padding: 10px; margin-bottom: 10px;">
                
                    <p>Radiologist: {{ compteRendu.idImage.radiologist.username }}</p>
                    <p>Patient: {{ compteRendu.idImage.patient.username }}</p>
                    <a href="{{ path('add_interprétation', {'id': compteRendu.id}) }}" style="display: inline-block; background-color: #007bff; color: #fff; padding: 8px 16px; text-decoration: none; border-radius: 4px;">Ajouter interprétation</a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
