{% block stylesheets %}
    {# Include Bootstrap CSS #}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    {# Include jQuery UI Datepicker CSS #}
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <style>
        /* Add custom CSS styles here if necessary */
        .custom-form {
            margin: 0 auto; /* Center the form */
            max-width: 400px; /* Set maximum form width */
        }
        .form-group input,
        .form-group textarea {
            width: 100%; /* Set input width to 100% */
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-4">DOCTORâ€™S INTERPRETATION</h2>

        <form method="post" class="mt-4 custom-form" novalidate>
            {{ form_start(form) }}

            <div class="form-group">
                {{ form_label(form.interpretationMed, 'Interpretation :') }}
                {{ form_widget(form.interpretationMed, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.interpretationMed) }}
            </div>

            <div class="form-group">
                {{ form_label(form.date, 'Date :') }}
                {{ form_widget(form.date, {'attr': {'class': 'form-control datepicker'}}) }}
                {{ form_errors(form.date) }}
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
            {{ form_end(form) }}
        </form>
    </div>
{% endblock %}

{% block javascripts %}
    {# Include jQuery and jQuery UI Datepicker JavaScript #}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    {# Initialize the Datepicker #}
    <script>
        $(document).ready(function() {
            $('.datepicker').datepicker({
                dateFormat: 'yy-mm-dd'
            });
        });
    </script>
{% endblock %}
